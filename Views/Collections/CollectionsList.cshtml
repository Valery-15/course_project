@using Microsoft.AspNetCore.Identity
@using CollectionsApp.Models
@using Microsoft.AspNetCore.Mvc;
@inject SignInManager<IdentityUser> signInManager
@inject UserManager<IdentityUser> userManager


@{
    bool isUserSignedIn = signInManager.IsSignedIn(this.User);
    bool isCurrentUserActive = this.User.IsInRole("active user");
    string currentUserId = userManager.GetUserId(this.User);
    bool isCurrentUserCollectionsOwner = ViewBag.collectionsOwnerId.Equals(currentUserId);
    bool isCurrentUserAdmin = this.User.IsInRole("admin");
    IdentityUser collectionsOwner = await userManager.FindByIdAsync(ViewBag.collectionsOwnerId);
    string collectionsOwnerName = collectionsOwner.UserName;
}

<div>
    <nav class="navbar">
        @if (isCurrentUserCollectionsOwner)
        {
            <form class="form-inline">
                <h1>My Collections</h1>
            </form>
            <form class="form-inline">
                <a asp-controller="Collections" asp-action="CreateCollection" asp-route-collectionsOwnerId="@ViewBag.collectionsOwnerId" class="btn btn-outline-success">
                    <i class="bi bi-plus-circle"></i>
                </a>
            </form>
        }
        else
        {
            <form class="form-inline">
                <h1>@collectionsOwnerName's  collections</h1>
            </form>
        }
    </nav>

    <table class="table table-striped table-bordered" id="collectionsTable">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Theme</th>
                <th>Description</th>
                <th>Size</th>
                @if (isCurrentUserActive && (isCurrentUserCollectionsOwner || isCurrentUserAdmin))
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<script>
    var collectionsOwnerId = '@ViewBag.collectionsOwnerId';
    var collectionsTable = document.getElementById('collectionsTable');
    var isCurrentUserActive = '@isCurrentUserActive'.toLowerCase() == 'true';
    var isCurrentUserCollectionsOwner = '@isCurrentUserCollectionsOwner'.toLowerCase() == 'true';
    var isCurrentUserAdmin = '@isCurrentUserAdmin'.toLowerCase() == 'true';


    updateCollectionsList();

    function updateCollectionsList() {
        var url = '/Collections/GetCollectionsList?userId=' + collectionsOwnerId;
        fetch(url)
            .then(result => result.json())
            .then(data => {
                clearTable(collectionsTable, 1);

                data.forEach(collection => {
                    var tr = document.createElement('tr');
                    var td;

                    td = document.createElement('td');
                    var a = document.createElement('a');
                    var linkText = document.createTextNode(collection.title);
                    a.appendChild(linkText);
                    a.href = "/Items/ItemsList?collectionId=" + collection.id;
                    td.appendChild(a);
                    tr.appendChild(td);

                    td = document.createElement('td');
                    td.innerHTML = collection.theme;
                    tr.appendChild(td);

                    td = document.createElement('td');
                    td.innerHTML = collection.description;
                    tr.appendChild(td);

                    td = document.createElement('td');
                    td.innerHTML = collection.size;
                    tr.appendChild(td);


                    if (isCurrentUserActive &&
                        (isCurrentUserCollectionsOwner || isCurrentUserAdmin)) {
                        td = document.createElement('td');
                        a = document.createElement('a');
                        var i = document.createElement('i');
                        i.className = "bi bi-pencil";
                        a.appendChild(i);
                        a.className = "btn btn-outline-success"
                        a.href = "/Collections/EditCollection?collectionId=" + collection.id;
                        td.appendChild(a);

                        a = document.createElement('a');
                        i = document.createElement('i');
                        i.className = "bi bi-trash";
                        a.appendChild(i);
                        a.className = "btn btn-outline-danger";
                        a.href = "/Collections/DeleteCollection?collectionId=" + collection.id;
                        td.appendChild(a);

                        tr.appendChild(td);
                    }

                    collectionsTable.append(tr);
                });
                setTimeout(updateCollectionsList, 5000);
            })
            .catch(e => {
                setTimeout(updateCollectionsList, 5000);
            });
    }

